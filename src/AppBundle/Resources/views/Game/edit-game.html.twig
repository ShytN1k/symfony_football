{% extends 'base.html.twig' %}

{% block navlinks %}
    <li><a href="{{ path('homepage') }}">Homepage</a></li>
    <li><a href="{{ path("teams", {"teamId": game.team.id} ) }}">{{ game.team.name }}</a></li>
    <li class="active"><a href="{{ path("games", { "teamId": game.team.id, "gameId": id} ) }}">{{ game.team1 }} vs {{ team2 }}</a></li>
{% endblock navlinks %}

{% block body %}

    {{ form_start(edit_form) }}
    {{ form_widget(edit_form) }}
    <br>
    <input type="submit" value="Update Game" class="btn btn-primary" />
    {{ form_end(edit_form) }}

    <br>
    {{ form_start(delete_form) }}
    {{ form_widget(delete_form) }}
    <input type="submit" value="Delete Game" class="btn btn-danger" />
    {{ form_end(delete_form) }}

    <br>
    <a href="{{ path("teams", {"teamId": game.team.id} ) }}" class="btn btn-default">Back to team {{ game.team.name }}</a>
{% endblock %}